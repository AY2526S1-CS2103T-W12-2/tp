<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.Scene?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.layout.VBox?>
<?import javafx.stage.Stage?>

<fx:root resizable="true" title="Help" type="javafx.stage.Stage" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
  <icons>
    <Image url="@/images/help_icon.png" />
  </icons>
  <scene>
    <Scene>
      <stylesheets>
        <URL value="@HelpWindow.css" />
      </stylesheets>

      <VBox>
        <children>
          <ScrollPane fitToWidth="true" prefHeight="600.0" prefWidth="800.0">
            <content>
              <Label fx:id="helpMessage" text="Label" wrapText="true" style="-fx-font-family: 'Courier New'; -fx-font-size: 12px;">
                <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                </padding>
              </Label>
            </content>
          </ScrollPane>
          <Button fx:id="copyButton" mnemonicParsing="false" onAction="#copyUrl" text="Copy User Guide URL">
            <VBox.margin>
              <Insets bottom="10.0" left="10.0" right="10.0" top="5.0" />
            </VBox.margin>
          </Button>
        </children>
      </VBox>
    </Scene>
  </scene>
</fx:root>
