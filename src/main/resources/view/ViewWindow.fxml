<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Scene?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.stage.Stage?>

<fx:root resizable="false" title="Person Details" type="javafx.stage.Stage" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
  <scene>
    <Scene>
  <GridPane fx:id="backgroundPane">
        <children>
          <Label text="Name:" GridPane.rowIndex="0" GridPane.columnIndex="0" />
          <Label fx:id="nameLabel" text="" GridPane.rowIndex="0" GridPane.columnIndex="1" />

          <Label text="Phone:" GridPane.rowIndex="1" GridPane.columnIndex="0" />
          <Label fx:id="phoneLabel" text="" GridPane.rowIndex="1" GridPane.columnIndex="1" />

          <Label text="Email:" GridPane.rowIndex="2" GridPane.columnIndex="0" />
          <Label fx:id="emailLabel" text="" GridPane.rowIndex="2" GridPane.columnIndex="1" />

          <Label text="Address:" GridPane.rowIndex="3" GridPane.columnIndex="0" />
          <Label fx:id="addressLabel" text="" GridPane.rowIndex="3" GridPane.columnIndex="1" />

          <Label text="Category:" GridPane.rowIndex="4" GridPane.columnIndex="0" />
          <Label fx:id="categoryLabel" text="" GridPane.rowIndex="4" GridPane.columnIndex="1" />

          <!-- Staff specific fields -->
          <Label fx:id="staffShiftLabel" text="" GridPane.rowIndex="5" GridPane.columnIndex="0" GridPane.columnSpan="2" />
          <Label fx:id="staffLeavesLabel" text="" GridPane.rowIndex="6" GridPane.columnIndex="0" GridPane.columnSpan="2" />

          <!-- Supplier specific fields -->
          <Label fx:id="supplierOrdersLabel" text="" GridPane.rowIndex="8" GridPane.columnIndex="0" GridPane.columnSpan="2"
                 wrapText="true" maxWidth="300" />

          <!-- Customer specific fields -->
          <Label fx:id="customerPointsLabel" text="" GridPane.rowIndex="7" GridPane.columnIndex="0" GridPane.columnSpan="2" />
          <Label fx:id="customerTierLabel" text="" GridPane.rowIndex="8" GridPane.columnIndex="0" GridPane.columnSpan="2"
                 wrapText="true" maxWidth="300" />

          <Button fx:id="closeButton" text="Close" onAction="#handleClose" GridPane.rowIndex="9" GridPane.columnIndex="1" />
        </children>
        <!-- Padding and spacing will be set in Java code -->
      </GridPane>
    </Scene>
  </scene>
</fx:root>

